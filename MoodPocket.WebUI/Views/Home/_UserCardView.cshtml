@model MoodPocket.WebUI.Models.UserCard

    <div class="col s4">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="@Model.BackgroundMemeUrl">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">@Model.User.Username<i class="material-icons right">more_vert</i></span>
                <p><a href="gallery/@Model.User.Username">Saved memes</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">@Model.User.Username<i class="material-icons right">close</i></span>
                <p>Gallery: @Model.Gallery.Name</p>
                <p>Memes saved: @Model.SavedMemesCount</p>
            </div>
        </div>
    </div>


