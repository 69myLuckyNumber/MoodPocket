<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("links", required: false)
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="row">
        <div class="col s2">
            <ul id="slide-out" class="side-nav fixed">
                <li>
                    <div class="user-view">
                        <div class="background">
                            <img src="https://material.io/static/images/hub/gallery.svg">
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="#!name"><span class="name">@User.Identity.Name</span></a>
                        }
                    </div>
                </li>

                <li><a href="/memes/"><i class="material-icons waves-effect" style="margin-right: 23px;">dashboard</i>Memes Mine</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/gallery/@User.Identity.Name"><i class="material-icons waves-effect" style="margin-right: 23px;">cloud_queue</i>Gallery</a></li>
                }
                <li><div class="divider"></div></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.RouteLink("Sign out", new { controller = "Account", action = "LogOut", @class = "waves-effect" })</li>
                }
                else
                {
                    <li>@Html.RouteLink("Join us", new { controller = "Account", action = "Entry", @class = "waves-effect" })</li>
                }
            </ul>
            <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
        <div class="col s10" style="padding-left: 40px;">
            @RenderBody()
        </div>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/ajax-notifications-scripts");
    <script>
        $(".button-collapse").sideNav();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
